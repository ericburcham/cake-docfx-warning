//////////////////////////////////////////////////////////////////////
// PLUGINS
//////////////////////////////////////////////////////////////////////
#addin nuget:?package=Cake.DocFx&version=1.0.0

//////////////////////////////////////////////////////////////////////
// CONFIGURE
//////////////////////////////////////////////////////////////////////
var target = Argument("target", "BuildDocs");

//////////////////////////////////////////////////////////////////////
// TASKS - DocFx
//////////////////////////////////////////////////////////////////////
Task("BuildDocs")
    .Does(() => {
        DocFxBuild("./docfx_project/docfx.json");
    });

//////////////////////////////////////////////////////////////////////
// EXECUTION
//////////////////////////////////////////////////////////////////////
RunTarget(target);
